@model ENGLISH.Models.Test
@{
    ViewData["Title"] = "Exam";
}

<h2>Exam</h2>

<p>Here an exam for you!</p>
<div>
    <hr />
    <dl class="row">
        <dd class="col-sm-12">
            <b>@Html.DisplayFor(model => model.Question)</b>
        </dd>
        <dd class="col-sm-10">
            <b>A. </b>
            @Html.DisplayFor(model => model.Answer1)
        </dd>
        <dd class="col-sm-10">
            <b>B. </b>
            @Html.DisplayFor(model => model.Answer2)
        </dd>
        <dd class="col-sm-10">
            <b>C. </b>
            @Html.DisplayFor(model => model.Answer3)
        </dd>
        <dd class="col-sm-10">
            <b>D. </b>
            @Html.DisplayFor(model => model.Answer4)
        </dd>
    </dl>
</div>
<div class="form-group">
    <input type="submit" value="Submit" class="btn btn-primary" />
</div>
